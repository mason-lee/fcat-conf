<a href="/admin/logout">Log out</a>

<h1>Submitted form</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th>
				#
			</th>
			<th>
				Picture
			</th>
			<th>
				Name
			</th>
			<th>
				Contact
			</th>
			<th>
				Credential
			</th>
			<th>
				Faculty
			</th>
			<th>
				Portfolio
			</th>
			<th>
				Company
			</th>
			<th>
				Position
			</th>
			<th>
				Responsibility
			</th>
			<th>
				Love
			</th>
			<th>
				Failure
			</th>
			<th>
				Wish
			</th>
			<th>
				Wisdom
			</th>
			<th>
				Share
			</th>
			<th>
				Edit
			</th>
			<th>
				Approve
			</th>
			<th>
				Disapprove
			</th>
		</tr>
	</thead>
	<tbody>
		<% _.each(users, function(user, index) { %>
		<tr>
			<td>
				<%= index + 1 %>
			</td>
			<td>
				<div class="avatar-cell">
					<img src="<%= user.avatar %>" alt="Profile picture of <%=: user.firstName | capitalize%> <%=: user.lastName | capitalize %>">	
				</div>
			</td>
			<td>
				<%= user.firstName %>
				<%= user.lastName %>
			</td>
			<td>
				<%= user.email %>
			</td>
			<td>
				<%= user.credential %>
			</td>
			<td>
				<%= user.categories %>
			</td>
			<td>
				<%= user.portfolio %>
			</td>
			<td>
				<%= user.company %>
			</td>
			<td>
				<%= user.position %>
			</td>
			<td>
				<%= user.responsibility %>
			</td>
			<td>
				<%= user.love %>
			</td>
			<td>
				<%= user.failure %>
			</td>
			<td>
				<%= user.wish %>
			</td>
			<td>
				<%= user.wisdom %>
			</td>
			<td class="shareability">
				<%= user.share %>
			</td>
			<td>
				<form action="/admin/submissions/<%= user.id %>/edit" method="post">
					<input type="submit" value="Edit" class="btn btn-default">
				</form>
			</td>
			<td>
				<form action="/admin/submissions/<%= user.id %>/approve" method="post">
					<input type="submit" value="Approve" class="btn btn-success">
				</form>
			</td>
			<td>
				<form action="/admin/submissions/<%= user.id %>/reject" method="post">
					<input type="submit" value="Reject" class="btn btn-danger">
				</form>
			</td>
		<% }) %>
		</tr>
	</tbody>
</table>