<section class="clearfix">
	<div class="container col-md-5 center-block">
		<form class="form-horizontal" role="form" action="/user" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<label for="firstName">First Name</label>
				<input type="text" name="firstName" class="form-control">
			</div>
			<div class="form-group">
				<label for="lastName">Last Name</label>
				<input type="text" name="lastName" class="form-control">
			</div>
			<div class="form-group">
				<label for="email">Email</label>
				<input type="email" name="email" class="form-control">
			</div>
			<div class="form-group">
				<label for="phone">Phone</label>
				<input type="number" name="phone" class="form-control">
			</div>
			<div class="form-group">
				<label for="credential">SFU Graduation Credential</label>
				<input type="text" name="credential" class="form-control">
			</div>
			<div class="form-group">
				<label>Categories</label>
				<select name="attendance" class="form-control">
					<option value="communication">Communication</option>
					<option value="siat">Interactive Art and Technology</option>
					<option value="art">Contemporary Arts</option>
					<option value="publishing">Publishing</option>
					<option value="media">Master of Digital Media</option>
				</select>
			</div>
			<div class="form-group">
				<label for="uploadFile">Attach Photo</label>
				<input type="file" name="uploadFile" class="form-control">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
</section>