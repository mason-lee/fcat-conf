<div class="container">
	<div class="biography-form-wrapper">
		<form class="form-horizontal" id="biography-form" role="form" action="/user" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<h1>Biography</h1>
			</div>
			<div class="form-group required">
				<label for="firstName" class="control-label">First Name</label>
				<input type="text" name="firstName" class="form-control">
			</div>
			<div class="form-group required">
				<label for="lastName" class="control-label">Last Name</label>
				<input type="text" name="lastName" class="form-control">
			</div>
			<div class="form-group required">
				<label for="email" class="control-label">Email</label>
				<input type="email" name="email" class="form-control">
			</div>
			<div class="form-group required">
				<label for="location" class="control-label">Current Location</label>
				<input type="text" name="location" class="form-control">
			</div>
			<div class="form-group avatar-input-group required">
				<label for="avatar" class="control-label">Attach Photo</label>
				<input type="file" name="avatar" class="form-control" />
			</div>
			<div class="form-group required">
				<label class="control-label">Categories</label>
				<div class="checkbox">
					<label>
						<input type="checkbox" name="categories" value="media">Master of Digital Media
					</label>	
				</div>
				<div class="checkbox">
					<label>
						<input type="checkbox" name="categories" value="siat">Interactive Art and Technology		
					</label>
				</div>
				<div class="checkbox">
					<label>
						<input type="checkbox" name="categories" value="art">Contemporary Arts		
					</label>
				</div>
				<div class="checkbox">
					<label>
						<input type="checkbox" name="categories" value="publishing">Publishing		
					</label>
				</div>
				<div class="checkbox">
					<label>
						<input type="checkbox" name="categories" value="media">Master of Digital Media		
					</label>
				</div>
				<div class="checkbox">
					<label>
						<input type="checkbox" name="categories" value="faculty">Faculty member		
					</label>
				</div>	
				<div id="id-error">
					<label for="categories" class="error" generated="true"></label>
				</div>
			</div>
			<div class="form-group">
				<label for="portfolio">Portfolio(URL)</label>
				<input type="url" name="portfolio" class="form-control" placeholder="https://mywebsite.com">
			</div>
		
			<div class="form-group">
				<label for="credential">SFU Graduation Credential</label>
				<input type="text" name="credential" class="form-control">
			</div>


			<div class="form-group">
				<h3>Where are you?</h3>
			</div>
			<div class="form-group">
				<label for="company">Company</label>
				<input type="text" name="company" class="form-control">
			</div>
			<div class="form-group">
				<label for="position">Position/title</label>
				<input type="text" name="position" class="form-control" placeholder="student or current position title">
			</div>
			<div class="form-group">
				<label for="responsibility">What are you working on?</label>
				<textarea class="form-control" name="responsibility" rows="3"></textarea>
			</div>
			<div class="form-group">
				<label for="love">Why do you love what you do?</label>
				<textarea class="form-control" name="love" rows="3"></textarea>
			</div>
			<div class="form-group">
				<label for="failure">What was your most spectacular learning moment?</label>
				<textarea class="form-control" name="failure" rows="3"></textarea>
			</div>
			<div class="form-group">
				<label for="wish">I wish I had known...</label>
				<textarea class="form-control" name="wish" rows="3"></textarea>
			</div>
			<div class="form-group">
				<label for="wisdom">Any words of wisdom for students?</label>
				<textarea class="form-control" name="wisdom" rows="3"></textarea>
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label for="share">
						<input type="checkbox" id="share" name="share">I agree to share my information with SFU alumni relations.
					</label>
				</div>
			</div>
			<div class="form-group" id="fcatShare">
				<div class="checkbox">
					<label for="shareFcat">
						<input type="checkbox" id="shareFcat" name="shareFcat">By submitting this information, I agree to share on this FCAT site.
					</label>
				</div>
			</div>
			<div id="fcatShare-error">
				<label for="shareFcat" class="error" generated="true"></label>
			</div>
			<div class="form-group">
				<button type="submit" class="custom-button">Submit</button>
			</div>
		</form>
	</div>
</div>