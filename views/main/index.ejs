<span class="form-success"><%- req.flash('message') %></span>

<div class="hero-section">
	<div>
		<img src="images/temp-banner.png" alt="FCAT Banner">
	</div>
</div>
<div class="featured-people-wrapper container-fluid">
	<% _.each(users, function(user, index) { %>			
		<% if ( (index+1)%3 !==0) { %>
			<div class="pull-left col-md-4 post">
				<div class="featured-people-wrapper">
					<%=: user.firstName | capitalize %>
					<%=: user.lastName | capitalize %>
					<%= user.email %>
					<%= user.phone %>
					<%=: user.credential | capitalize %>
					<%=: user.categories | capitalize %>
				</div>
			</div>
		<% } %>
		
		<!-- Every 3 divs no padding-right -->
		<% if ( (index+1)%3 === 0) { %>
			<div class="new-left col-md-4 post">
				<div class="featured-people-wrapper">
					<%=: user.firstName | capitalize %>
					<%=: user.lastName | capitalize %>
					<%= user.email %>
					<%= user.phone %>
					<%=: user.credential | capitalize %>
					<%=: user.categories | capitalize %>
				</div>
			</div>
		<% } %>
	<% }) %>
</div>