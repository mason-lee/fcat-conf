<!-- Modal -->
<% _.each(users, function(user, index) { %>
<div class="modal fade <%=user.id%>">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title"><%= user.firstName %> <%= user.lastName %></h4>
			</div>
			<div class="modal-body">
				<div class="modal-profile img-rounded center-block">
					<img src="<%= user.avatar %>" alt="Profile picture of <%=: user.firstName | capitalize%> <%=: user.lastName | capitalize %>">
				</div>
				<p>
					<span class="title-modal"><%= user.credential %> </span>from <span class="programs-modal"><%= user.categories %></span><span id="alumni-position">, currently working as a(n) <%= user.position %> at <%= user.company %> in <%= user.location %>.</span>
				</p>
				<p>
				<% if(user.portfolio) { %>
					<%= user.firstName %>'s website: <a href="<%= user.portfolio %>"><%= user.portfolio %></a>
				<% } %>
				</p>
				<p><span class="modal-placeholder-text">I love my work doing...</span><br><span class="modal-paragraphs"><%= user.responsibility %></span></p>
				<p><span class="modal-placeholder-text">I love my work because...</span><br><span class="modal-paragraphs"><%= user.love %></span></p>
				<p><span class="modal-placeholder-text">My biggest failure was when...</span><br><span class="modal-paragraphs"><%= user.failure %></span></p>
				<p><span class="modal-placeholder-text">I wish I had known...</span><br><span class="modal-paragraphs"><%= user.wish %></span></p>
				<p><span class="modal-placeholder-text">Here are some words of wisdom...</span><br><span class="modal-paragraphs"><%= user.wisdom %></span></p>
			</div>
		</div>
	</div>
</div>
<% }) %>