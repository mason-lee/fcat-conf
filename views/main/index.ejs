			</div>
		</div>
	</div>

	<div class="container">
		<div class="people-wrapper">
		<% _.each(users, function(user, index) { %>
			<div class="pull-left post element-item col-md-4 <%= user.categories %>">
				<div class="inner-featured-people-wrapper">
					<a data-toggle="modal" data-target=".<%=user.id%>">
						<div class="image-wrapper">
							<img src="<%= user.avatar %>" alt="Profile picture of <%=: user.firstName | capitalize%> <%=: user.lastName | capitalize %>">
						</div>
						<h3 class="name">
							<%=: user.firstName | capitalize %>
							<%=: user.lastName | capitalize %>
						</h3>
					</a>
					<h5 class="category-study">
						<%=: user.categories | capitalize %>	
					</h5>
					<h5>
						<%=: user.company | capitalize %>	
					</h5>
					<h5>
						<%=: user.position | capitalize %>	
					</h5>
				</div>
				<hr>
			</div>	
		<% }) %>
		</div>
	</div><!--end container-->
	<!-- <div id="loadMore">Load More</div>
	<div id="showLess">Show Less</div> -->
</div>

<!-- Modal -->
<% _.each(users, function(user, index) { %>
<div class="modal fade <%=user.id%>">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title"><%= user.firstName %> <%= user.lastName %></h4>
			</div>
			<div class="modal-body">
				<div class="modal-profile img-rounded center-block">
					<img src="<%= user.avatar %>" alt="Profile picture of <%=: user.firstName | capitalize%> <%=: user.lastName | capitalize %>">
				</div>
				<p><%= user.credential %></p>
				<p><%= user.categories %></p>
				<p><%= user.portfolio %></p>
				<p><%= user.company %></p>
				<p><%= user.responsibility %></p>
				<p><%= user.love %></p>
				<p><%= user.failure %></p>
				<p><%= user.wish %></p>
				<p><%= user.wisdom %></p>
			</div>
		</div>
	</div>
</div>
<% }) %>